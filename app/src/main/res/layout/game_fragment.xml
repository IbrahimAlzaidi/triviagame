<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_my_backgound"
    tools:context=".ui.fragments.GameFragment">
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="34dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:layout_marginTop="64dp"
        android:layout_marginStart="28dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/questionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginStart="48dp"
        android:layout_marginTop="148dp"
        android:textColor="@color/custom_grey_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/custom_grey_color"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginTop="14dp"
        android:alpha="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionText"
        />
    <TextView
        android:id="@+id/questionBody"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:lineSpacingExtra="8dp"
        android:textStyle="bold"
        tools:text="I put a lot of pressure on myself. I think something’s not good enough, and I won’t stop until I feel like I’ve made it. I’m never satisfied."
        android:textColor="@color/white"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/line"
        app:layout_constraintStart_toStartOf="@id/questionText"
        app:layout_constraintEnd_toEndOf="@id/line"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/answersRecycler"
        android:layout_width="0dp"
        android:layout_height="264dp"
        android:orientation="vertical"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="48dp"
        tools:listitem="@layout/recycler_card"
        app:layout_constraintEnd_toEndOf="@id/questionBody"
        app:layout_constraintTop_toBottomOf="@id/questionBody"
        app:layout_constraintStart_toStartOf="@id/questionBody"
        app:layout_constraintBottom_toTopOf="@id/submitButton"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />
    <Button
        android:id="@+id/submitButton"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="Submit"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintStart_toStartOf="@id/answersRecycler"
        app:layout_constraintEnd_toEndOf="@id/answersRecycler"
        app:layout_constraintBottom_toBottomOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>